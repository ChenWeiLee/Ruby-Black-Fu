<p id="notice"><%= notice %></p>

<div class="header">
  <div class="logo"></div>
  <div class="navbar">
    <ul>
      <li id="news-bt">新聞 News</li>
      <li class="active" id="product-bt">商品 Product</li>
      <li id="company-bt">企業 Company</li>
    </ul>
  </div>
</div>

<div id="product-contents">

  <% @products.each do |product| %>
  <div class="product-box">
    <div class="img-box">
      <%= image_tag product.photo.prod_min_img %>
    </div>
    <div class="text-box">
      <%= product.name %>
    </div>
  </div>
  <% end %>

</div>

