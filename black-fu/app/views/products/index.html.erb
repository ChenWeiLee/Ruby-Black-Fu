<p id="notice"><%= notice %></p>

<div class="header">
  <div id="logo"></div>
  <div class="title"></div>
  <div class="navbar">
    <div class="line-box">
      <button class="btn btn-default" type="submit" id="company-bt">企業 Company</button>
      <button class="btn btn-default active" type="submit" id="product-bt">商品 Product</button>
      <button class="btn btn-default" type="submit" id="news-bt">新聞 News</button>
    </div>
  </div>
</div>

<div id="product-contents">

  <% @products.each do |product| %>
  <div class="product-box">
    <div class="img-box">
      <%= image_tag product.photo.prod_min_img %>
    </div>
    <div class="text-box">
      <%= product.name %>
    </div>
  </div>
  <% end %>

</div>
