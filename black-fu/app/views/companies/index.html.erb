<p id="notice"><%= notice %></p>

<div class="header">
  <div id="logo"></div>
  <div class="navbar">
    <ul>
      <li id="news-bt">新聞 News</li>
      <li id="product-bt">商品 Product</li>
      <li class="active" id="company-bt">企業 Company</li>
    </ul>
  </div>
</div>

<div id="company-contents">
  <% @companies.each do |company| %>
  <div class="company-box">
    <div class="name-box">
      <%= company.name %>
    </div>
    <div class="logo-box">
      <%= image_tag company.logo.prod_min_img %>
    </div>
    <div class="ceo-box">
      <%= company.ceo %>
    </div>
  </div>
  <% end %>
</div>

